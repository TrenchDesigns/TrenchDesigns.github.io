<script>
const checkboxes = document.querySelectorAll('.sectionCheckbox');
const bookBtn = document.getElementById('bookBtn');
const highlights = document.querySelectorAll('.yard-svg .highlight');

function updateSelection() {
  const selected = [];
  checkboxes.forEach((c,i) => {
    if(c.checked){
      selected.push(c.value);
      highlights[i].setAttribute('fill','#2e7d32');
      highlights[i].setAttribute('transform','scale(1.05)');
    } else {
      highlights[i].setAttribute('fill','transparent');
      highlights[i].setAttribute('transform','scale(1)');
    }
  });
  bookBtn.style.display = selected.length > 0 ? 'block' : 'none';
  localStorage.setItem('greenScapeSelection', JSON.stringify(selected));
}

checkboxes.forEach(c => c.addEventListener('change', updateSelection));

function goToBooking() { location.href = 'booking.html'; }
</script>

